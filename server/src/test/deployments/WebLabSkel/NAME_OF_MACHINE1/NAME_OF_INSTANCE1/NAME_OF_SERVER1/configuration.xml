<?xml version="1.0" encoding="UTF-8"?>
<server
	xmlns="http://www.weblab.deusto.es/configuration" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.weblab.deusto.es/configuration server_configuration.xsd"
>

	<!-- There can be more than one file -->
	<configuration file="server_config.py" />
	<configuration file="server_config.py" />

	<!-- What type of server is this? -->
	<!-- <type>weblab.data.ServerType::Login</type> -->
	<type>test.unit.voodoo.gen.loader.ServerType::Login</type>
	<methods>test.unit.voodoo.gen.loader.APItype1::methods</methods>

	<!-- Implementation: a python path saying which class will implement the methods of the API -->
	<implementation>test.unit.voodoo.gen.loader.ServerSample.Server</implementation>

	<!-- Restrictions: there can be as many as wanted; from 0 to unbound -->
	<restriction>something</restriction>
	<restriction>something else</restriction>

	<protocols>
		<!-- This server supports both Direct calls, as XMLRPC calls -->
		<protocol name="Direct">
			<coordinations>
				<coordination></coordination>
			</coordinations>
			<creation></creation>
		</protocol>
		<protocol name="XMLRPC">
			<coordinations>
				<coordination>
					<parameter name="address" value="192.168.0.1:8095@LABORATORYNETWORK" />
				</coordination>
				<coordination>
					<parameter name="address" value="130.206.100.134:8095@INTERNET" />
				</coordination>
			</coordinations>
			<creation>
				<parameter name="address" value=""     />
				<parameter name="port"    value="8095" />
			</creation>
		</protocol>
	</protocols>
</server>

